<% layout('./layouts/boilerplate') -%>
<body>
  <div id="filters">
    <!-- Category Icons -->
    <div class="filter"><div><a href="/listings?category=Trending"><i class="fa-solid fa-fire" style="font-size: 1.5rem;"></i></a></div><p>Trending</p></div>
    <div class="filter"><div><a href="/listings?category=Room"><i class="fa-solid fa-bed" style="font-size: 1.5rem;"></i></a></div><p>Room</p></div>
    <div class="filter"><div><a href="/listings?category=Iconic Cities"><i class="fa-solid fa-mountain-city" style="font-size: 1.5rem;"></i></a></div><p>Iconic Cities</p></div>
    <div class="filter"><div><a href="/listings?category=Mountain"><i class="fa-solid fa-mountain" style="font-size: 1.5rem;"></i></a></div><p>Mountain</p></div>
    <div class="filter"><div><a href="/listings?category=Castles"><i class="fa-brands fa-fort-awesome" style="font-size: 1.5rem;"></i></a></div><p>Castles</p></div>
    <div class="filter"><div><a href="/listings?category=Arctic"><i class="fa-solid fa-snowflake" style="font-size: 1.5rem;"></i></a></div><p>Arctic</p></div>
    <div class="filter"><div><a href="/listings?category=Camping"><i class="fa-solid fa-campground" style="font-size: 1.5rem;"></i></a></div><p>Camping</p></div>
    <div class="filter"><div><a href="/listings?category=Farms"><i class="fa-solid fa-cow" style="font-size: 1.5rem;"></i></a></div><p>Farms</p></div>
    <div class="filter"><div><a href="/listings?category=Domes"><i class="fa-solid fa-igloo" style="font-size: 1.5rem;"></i></a></div><p>Domes</p></div>
    <div class="filter"><div><a href="/listings?category=Boats"><i class="fa-solid fa-sailboat" style="font-size: 1.5rem;"></i></a></div><p>Boats</p></div>
    <div class="filter"><div><a href="/listings?category=Hospital"><i class="fa-regular fa-hospital" style="font-size: 1.5rem;"></i></a></div><p>Hospital</p></div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>

  <% if (listings.length > 0) { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 gx-0 mt-3">
      <% listings.forEach(listing => { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card listing-card" style="width: 26rem;">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay">Krishna</div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                â‚¹ <%= listing.price.toLocaleString("en-IN") %> /night
                <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
              </p>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
    <div class="text-center mt-3 mb-5">
      <a href="/listings" class="btn btn-outline-secondary">Back to Listings</a>
    </div>
  <% } else { %>
    <div class="text-center py-5 text-muted fs-4">
      No listings found for "<%= searchQuery %>"
    </div>
     <div class="text-center mt-3">
    <a href="/listings" class="btn btn-outline-secondary">Back to Listings</a>
  </div>
  <% } %>
</body>

<script>
  let taxSwitch = document.getElementById('flexSwitchCheckDefault');
  taxSwitch.addEventListener('click', () => {
    let taxInfo = document.querySelectorAll('.tax-info');
    for (info of taxInfo) {
      info.style.display = (info.style.display !== 'inline') ? 'inline' : 'none';
    }
  });
</script>
