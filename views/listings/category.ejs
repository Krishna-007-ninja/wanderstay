<% layout('./layouts/boilerplate') -%>

<h2 class="text-center mt-4">Category: <%= category %></h2>

<% if (listings.length > 0) { %>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 gx-0 mt-3">
    <% listings.forEach(listing => { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card" style="width: 26rem;">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              â‚¹<%= listing.price.toLocaleString("en-IN") %> /night
              <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% }) %>
  </div>
  <div class="text-center mt-3 mb-5">
    <a href="/listings" class="btn btn-outline-secondary">Back to Listings</a>
  </div>
<% } else { %>
  <div class="text-center text-muted mt-5">No listings found in <%= category %> category.</div>
  <div class="text-center mt-3">
    <a href="/listings" class="btn btn-outline-secondary">Back to Listings</a>
  </div>
<% } %>
