<% layout('./layouts/boilerplate') -%>
<div class="row mt-3">
    <h2 class="col-6 offset-3">Login</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lebel for="username" class="form-lebel">Username</lebel>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">missing username!</div>
            </div>
            <div class="mb-3">
                <lebel for="password" class="form-lebel">Password</lebel>
                <input name="password" id="password" type="password" class="form-control" required>
                <div class="invalid-feedback">missing password!</div>
            </div>
            <button class="btn btn-success">login</button>
        </form>
    </div>
</div>